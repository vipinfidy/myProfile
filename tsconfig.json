{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,                 // ✅ FIX 1
    "allowSyntheticDefaultImports": true,    // ✅ Optional but helps
    "jsx": "react-jsx",                      // ✅ FIX 2 for JSX in tsx
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
